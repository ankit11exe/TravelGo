<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2"> 
        <h3 class="col-8 offset-3">Listing Details</h3>

        <div class="card col-7 offset-3 show-card">
            <img src="<%= listing.image%>" class="card-img-top show-img mt-3 mb-3" alt="listingImage">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b> <br>
                    <%= listing.description %> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %> <br>
                </p>
            </div>
        </div>
        <br>
        <div class="btns">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 mb-4" style="background-color: #ff2793; border: none;">Edit</a>
            
                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
        </div> 
</div>
</div>


